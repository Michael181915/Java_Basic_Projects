import java.util.*;

public class DataStr implements Runnable{

	int time;
	String name;
	Random r = new Random();
	
	public DataStr(String name) {
		this.name = name;
		time = r.nextInt(4999);
	}
	
	public void run() {
		System.out.printf("Поток %s спит %d", name, time);
		try {
			Thread.sleep(time);
		}catch(Exception e) {}
		System.out.printf("Поток %s проснулся и закончился, name);
	}
}
